{
  "extends": "../../tsconfig.shared.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "strict": false,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "ephox/mcagar/test/*": ["src/test/ts/module/ephox/mcagar/test/*"],
      "ephox/mcagar/demo/*": ["src/demo/ts/ephox/mcagar/demo/*"],
      "ephox/mcagar/*": ["src/main/ts/ephox/mcagar/*"],
      "@ephox/mcagar": ["src/main/ts/ephox/mcagar/api/Main.ts"]
    }
  },
  "include": [
    "src/demo/ts",
    "src/main/ts",
    "src/test/ts",
  ],
  "references": [
    { "path": "../agar" },
    { "path": "../katamari" },
    { "path": "../sand" },
    { "path": "../sugar" },
  ]
}
